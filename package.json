{
  "name": "@anypoint-web-components/anypoint-chip-input",
  "description": "A material design input with chips adjusted for Anypoint platform.",
  "version": "0.2.4",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "api-components",
    "input",
    "chip",
    "material-design"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/anypoint-web-components/paper-chip-input.git"
  },
  "bugs": {
    "url": "https://github.com/anypoint-web-components/paper-chip-input/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@anypoint-web-components/anypoint-autocomplete": "^0.2.6",
    "@anypoint-web-components/anypoint-chip": "^0.2.1",
    "@anypoint-web-components/anypoint-input": "^0.2.21",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.17",
    "@advanced-rest-client/arc-icons": "^3.1.2",
    "@advanced-rest-client/testing-karma-sl": "^1.4.2",
    "@anypoint-web-components/anypoint-checkbox": "^1.1.2",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.27",
    "@open-wc/testing-karma": "^4.0.7",
    "@polymer/iron-icons": "^3.0.0",
    "@polymer/iron-test-helpers": "^3.0.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.6",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "sinon": "^9.1.0",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.0.3",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/demo/**/*.js",
          "**/demo/**/*.html"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      },
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "no-plusplus": "off",
          "no-continue": "off",
          "class-methods-use-this": "off"
        }
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
