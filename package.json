  "dependencies": {
    "@anypoint-web-components/anypoint-autocomplete": "^0.1.2",
    "@anypoint-web-components/anypoint-chip": "^0.1.0",
    "@anypoint-web-components/anypoint-input": "^0.2.3",
    "@polymer/iron-icon": "^3.0.0",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.14",
