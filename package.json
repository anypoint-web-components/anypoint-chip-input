    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@anypoint-web-components/anypoint-autocomplete": "^0.2.0",
    "@anypoint-web-components/anypoint-chip": "^0.2.0",
    "@anypoint-web-components/anypoint-input": "^0.2.17",
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.17",
    "@advanced-rest-client/arc-icons": "^3.1.0",
    "@advanced-rest-client/testing-karma-sl": "^1.3.1",
